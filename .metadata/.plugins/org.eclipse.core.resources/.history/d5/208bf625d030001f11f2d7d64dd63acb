		lblNewLabel.setFont(new Font("Tahoma", Font.BOLD, 28));
		lblNewLabel.setForeground(new Color(64, 128, 128));
		lblNewLabel.setBounds(10, 20, 279, 39);
		contentPane.add(lblNewLabel);
